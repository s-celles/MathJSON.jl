{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/s-celles/MathJSON.jl/schemas/operators.schema.json",
  "title": "MathJSON Operators",
  "description": "Schema for MathJSON operator definitions (compatible with Cortex Compute Engine)",
  "type": "object",
  "required": ["operators"],
  "properties": {
    "operators": {
      "type": "array",
      "description": "Array of operator definitions",
      "items": {
        "type": "object",
        "required": ["name", "category"],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1,
            "description": "MathJSON operator name"
          },
          "category": {
            "type": "string",
            "description": "Category name (must exist in categories.json)"
          },
          "arity": {
            "type": "string",
            "description": "Operator arity - e.g., '1', '2', 'variadic', '1+', '2+'"
          },
          "signature": {
            "type": "string",
            "description": "Type signature of the operator, e.g., '(number, number) -> number'"
          },
          "associative": {
            "type": "boolean",
            "description": "Whether the operator is associative"
          },
          "commutative": {
            "type": "boolean",
            "description": "Whether the operator is commutative"
          },
          "idempotent": {
            "type": "boolean",
            "description": "Whether the operator is idempotent"
          },
          "lazy": {
            "type": "boolean",
            "description": "Whether the operator uses lazy evaluation"
          },
          "broadcastable": {
            "type": "boolean",
            "description": "Whether the operator can be broadcast over collections"
          },
          "description": {
            "type": "string",
            "description": "Brief description of the operator"
          },
          "wikidata": {
            "type": "string",
            "pattern": "^Q[0-9]+$",
            "description": "Wikidata identifier for the operator"
          },
          "examples": {
            "type": "array",
            "description": "Example expressions using this operator",
            "items": {
              "type": "string",
              "description": "Example expression as a string"
            }
          }
        }
      },
      "minItems": 1
    }
  },
  "additionalProperties": false
}
