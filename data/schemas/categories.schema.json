{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/s-celles/MathJSON.jl/schemas/categories.schema.json",
  "title": "MathJSON Operator Categories",
  "description": "Schema for MathJSON.jl operator category definitions",
  "type": "object",
  "required": ["categories"],
  "properties": {
    "categories": {
      "type": "array",
      "description": "Array of operator category definitions",
      "items": {
        "type": "object",
        "required": ["id", "name", "description"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[A-Z_]+$",
            "description": "Unique uppercase identifier matching OperatorCategory enum"
          },
          "name": {
            "type": "string",
            "minLength": 1,
            "description": "Human-readable display name"
          },
          "description": {
            "type": "string",
            "description": "Brief description of the category"
          }
        },
        "additionalProperties": false
      },
      "minItems": 1
    }
  },
  "additionalProperties": false
}
